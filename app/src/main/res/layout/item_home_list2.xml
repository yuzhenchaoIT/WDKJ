<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_home_list2_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="12dp"
        android:text="滋滋滋滋滋滋我自知自我自知自我滋滋滋滋滋滋滋我自我姊姊"
        android:textColor="#333333"
        android:textSize="12sp" />


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/item_home_list2_img"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_below="@id/item_home_list2_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="12dp"
        app:roundTopLeft="false"
        app:roundedCornerRadius="8dp" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="18dp"
        android:layout_below="@id/item_home_list2_content"
        android:layout_marginLeft="-4dp"
        android:layout_marginTop="-1dp"
        android:layout_alignTop="@+id/item_home_list2_img"
        android:layout_alignLeft="@+id/item_home_list2_img"
        android:src="@drawable/icon_advertising" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/item_home_list2_img"
        android:layout_marginTop="10dp"
        android:background="#F6F6F6"></View>


</RelativeLayout>
