<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".view.MyGroupActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="30dp">
        <ImageView
            android:id="@+id/myGroup_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/common_nav_btn_back_n_xhdpi"
            android:layout_marginLeft="12dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:textColor="#666666"
            android:text="群组"/>

    </RelativeLayout>
    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="52dp">
        <EditText
            android:id="@+id/search_edit_mygroup"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="12dp"
            android:paddingLeft="44dp"
            android:textSize="12sp"
            android:hint="搜索好友/群"
            android:layout_marginLeft="12dp"
            android:background="@drawable/linear_search_shape_black"/>

        <ImageView
            android:id="@+id/search_image_mygroup"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="21dp"
            android:layout_toRightOf="@+id/search_edit"
            android:padding="5dp"
            android:src="@drawable/common_nav_btn_search_n_xhdpi" />
    </RelativeLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_group"
        android:background="#ffffff"
        android:layout_marginTop="4dp"></ListView>
</LinearLayout>