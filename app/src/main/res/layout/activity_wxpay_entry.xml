<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".wxapi.WXPayEntryActivity">


    <ImageView
        android:id="@+id/wx_no_pay_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/no_pay_img" />

    <TextView
        android:id="@+id/txt_pay_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wx_no_pay_img"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="您点击取消了支付"
        android:textColor="#000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/wx_pay_restart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_restart_pay"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="点我可以重新支付"
        android:textColor="#fff"
        android:textSize="16sp" />

</RelativeLayout>