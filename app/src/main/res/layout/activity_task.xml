<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".myview.TaskActivity"
    android:orientation="vertical"
    android:background="#f2f2f2">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="日常任务"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="24dp"
        android:textSize="14sp"
        android:textColor="#666666"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fff"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="每日签到"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:textColor="#333333"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="+10"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:textColor="#ff5757"
                    android:layout_centerInParent="true"/>
                <Button
                    android:id="@+id/mbutton_qqd"
                    android:layout_width="51dp"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shaperw_bg"
                    android:text="去签到"
                    android:textSize="12sp"
                    android:textColor="#20affa"
                    android:padding="5dp" />
                <Button
                    android:id="@+id/mButton_yqd"
                    android:layout_width="51dp"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="已签到"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    android:background="@drawable/shaperwf_bg"
                    android:visibility="gone"/>
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ddd"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="每日首评"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:textColor="#333333"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="+10"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:textColor="#ff5757"
                    android:layout_centerInParent="true"/>
                <Button
                    android:id="@+id/mbutton_qpj"
                    android:layout_width="51dp"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shaperw_bg"
                    android:text="去评价"
                    android:textSize="12sp"
                    android:textColor="#20affa"
                    android:padding="5dp"/>
                <Button
                    android:id="@+id/mbutton_ypj"
                    android:layout_width="51dp"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="已评价"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    android:background="@drawable/shaperwf_bg"
                    android:visibility="gone"/>
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ddd"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="每日发帖"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:textColor="#333333"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="+20"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:textColor="#ff5757"
                    android:layout_centerInParent="true"/>
                <Button
                    android:id="@+id/mbutton_qft"
                    android:layout_width="51dp"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shaperw_bg"
                    android:text="去发帖"
                    android:textSize="12sp"
                    android:textColor="#20affa"
                    android:padding="5dp" />
                <Button
                    android:id="@+id/mbutton_ywc"
                    android:layout_width="51dp"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="已完成"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    android:background="@drawable/shaperwf_bg"
                    android:visibility="gone"/>
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ddd"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="每日分享"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:textColor="#333333"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="+20"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:textColor="#ff5757"
                    android:layout_centerInParent="true"/>
                <Button
                    android:id="@+id/mbutton_qfx"
                    android:layout_width="51dp"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shaperw_bg"
                    android:text="去分享"
                    android:textSize="12sp"
                    android:textColor="#20affa"
                    android:padding="5dp"/>
                <Button
                    android:layout_width="51dp"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="已分享"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    android:background="@drawable/shaperwf_bg"
                    android:visibility="gone"/>
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ddd"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="每日查看广告"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:textColor="#333333"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="+20"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:textColor="#ff5757"
                    android:layout_centerInParent="true"/>
                <Button
                    android:id="@+id/mbutton_qck"
                    android:layout_width="51dp"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shaperw_bg"
                    android:text="去查看"
                    android:textSize="12sp"
                    android:textColor="#20affa"
                    android:padding="5dp"/>
                <Button
                    android:id="@+id/mbutton_yck"
                    android:layout_width="51dp"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="已查看"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    android:background="@drawable/shaperwf_bg"
                    android:visibility="gone"/>
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ddd"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="一次性任务"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="24dp"
        android:textSize="14sp"
        android:textColor="#666666"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fff"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="完善信息"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:textColor="#333333"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="+50"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:textColor="#ff5757"
                    android:layout_centerInParent="true"/>
                <Button
                    android:id="@+id/mbutton_qws"
                    android:layout_width="51dp"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shaperw_bg"
                    android:text="去完善"
                    android:textSize="12sp"
                    android:textColor="#20affa"
                    android:padding="5dp"/>
                <Button
                    android:id="@+id/mbutton_yws"
                    android:layout_width="51dp"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="已完善"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    android:background="@drawable/shaperwf_bg"
                    android:visibility="gone"/>
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ddd"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="绑定微信"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:textColor="#333333"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="+50"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:textColor="#ff5757"
                    android:layout_centerInParent="true"/>
                <Button
                    android:layout_width="51dp"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shaperw_bg"
                    android:text="去绑定"
                    android:textSize="12sp"
                    android:textColor="#20affa"
                    android:padding="5dp"/>
                <Button
                    android:layout_width="51dp"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="已绑定"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    android:background="@drawable/shaperwf_bg"
                    android:visibility="gone"/>
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ddd"/>
    </LinearLayout>

</LinearLayout>