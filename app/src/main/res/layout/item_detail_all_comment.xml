<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:id="@+id/item_details_all_comment_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/item_details_all_comment_head_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:placeholderImage="@drawable/no_pay_img"
                app:roundAsCircle="true" />

            <TextView
                android:id="@+id/item_details_all_comment_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/item_details_all_comment_head_img"
                android:text="可口可乐"
                android:textColor="#666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_details_all_comment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_details_all_comment_nick_name"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/item_details_all_comment_head_img"
                android:text="2019-09-09"
                android:textColor="#999"
                android:textSize="10sp" />


        </RelativeLayout>


        <TextView
            android:id="@+id/item_details_all_comment_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:text="我爱工作我爱工作我爱工作我爱工作我爱工作我爱工作我爱工作我爱工作我爱工作我爱工作我爱工作我爱工作"
            android:textColor="#666"
            android:textSize="12sp" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/item_details_all_comment_ll"
        android:layout_marginTop="10dp"
        android:background="#F6F6F6"></View>

</RelativeLayout>
