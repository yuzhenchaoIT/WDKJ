<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/com_recy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"></com.jcodecraeer.xrecyclerview.XRecyclerView>
    <ImageView
        android:id="@+id/frag03_xie"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/community_btn_xpl"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:layout_marginRight="12dp"
        android:padding="13dp"
        android:background="@drawable/shape_yuan"/>
    <LinearLayout
        android:id="@+id/frag_03_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:background="#fff">
        <EditText
            android:id="@+id/frag_03_edText"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="14dp"
            android:background="@drawable/shape_com"
            android:paddingLeft="8dp"/>
        <TextView
            android:id="@+id/frag_03_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="7dp"/>
    </LinearLayout>
</RelativeLayout>