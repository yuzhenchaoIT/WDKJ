<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.SpaceActivity"
    android:orientation="vertical"
  >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/head_top"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:layout_alignParentBottom="true"
                    android:paddingLeft="102dp"
                    android:background="@drawable/shape_space">
                    <TextView
                        android:id="@+id/head_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:layout_marginTop="7dp" />
                    <TextView
                        android:id="@+id/head_gq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#666"
                        android:textSize="12sp"
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/head_name"/>
                    <ImageView
                        android:id="@+id/as_more"
                        android:layout_width="24dp"
                        android:layout_height="12dp"
                        android:src="@drawable/more"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="12dp"/>
                    <LinearLayout
                        android:id="@+id/as_lin"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="-144dp">
                        <TextView
                            android:id="@+id/as_haoyou"
                            android:layout_width="72dp"
                            android:layout_height="match_parent"
                            android:background="#39b8fb"
                            android:textSize="14sp"
                            android:text="+好友"
                            android:textColor="#fff"
                            android:gravity="center"/>
                        <TextView
                            android:id="@+id/as_gz"
                            android:layout_width="72dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/shape_space_tx"
                            android:textSize="14sp"
                            android:text="+关注"
                            android:textColor="#fff"
                            android:gravity="center"/>
                    </LinearLayout>
                </RelativeLayout>
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/head_pic"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    app:roundedCornerRadius="90dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginBottom="10dp"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/space_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </ScrollView>



</LinearLayout>