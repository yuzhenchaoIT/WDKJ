<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.SpaceActivity">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/space_top"
        android:layout_width="match_parent"
        android:layout_height="200dp" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/space_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/space_top"></android.support.v7.widget.RecyclerView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_above="@+id/space_recycler"></RelativeLayout>
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/space_head"
        android:layout_width="68dp"
        android:layout_height="68dp"
        app:roundedCornerRadius="90dp"
        android:layout_above="@+id/space_recycler"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="10dp"/>
</RelativeLayout>