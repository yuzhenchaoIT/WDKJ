<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.FlockActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="12dp"
            android:src="@drawable/common_nav_btn_back_n_xhdpi"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="创建群聊"
            android:layout_marginTop="40dp"
            android:textSize="20sp"
            android:layout_marginRight="38dp"
            android:gravity="center"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#F2f2f2"/>
    <ImageView
        android:layout_width="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_height="150dp"
        android:src="@drawable/qun"/>
    <EditText
        android:id="@+id/qun_edittext_name"
        android:background="@drawable/qun_selector"
        android:layout_width="184dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:textSize="14sp"
        android:gravity="center"
        android:padding="5dp"
        android:hint="填写群名称(2-20汉字)"
        android:layout_gravity="center"/>
    <RelativeLayout
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="119dp">

        <EditText
            android:id="@+id/qun_edittext_content"
            android:layout_width="336dp"
            android:layout_height="119dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/qun_ed_selector"
            android:gravity="top|left"
            android:hint="介绍你的群吧，让更多朋友加入！"
            android:padding="12dp"
            android:paddingLeft="10dp"
            android:textColor="#666666"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="21dp"
            android:layout_marginRight="21dp"
            android:layout_marginBottom="3dp"
            android:text="100字以内"
            android:textColor="#999999"
            android:textSize="10sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="创建"
        android:padding="10dp"
        android:id="@+id/text_login"
        android:gravity="center"
        android:background="@drawable/qun_te_selector"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="20dp"
        />
</LinearLayout>